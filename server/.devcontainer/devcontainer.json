{
	"name": "Existing Dockerfile",
	"build": {
		"context": "..",
		"dockerfile": "../Dockerfile"
	},

	"remoteUser": "appuser",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.vscode-pylance",
				"ms-python.black-formatter",
				"ms-python.isort"
			],
			"settings": {
				"isort.showNotifications": "always",
				"editor.defaultFormatter": "ms-python.black-formatter",
				"editor.formatOnSave": true,
				"isort.check": true
			}
		}
	}
}
